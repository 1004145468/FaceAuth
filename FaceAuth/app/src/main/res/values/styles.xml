<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#039e9e9e</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <!--有必要进一步说明 一定不需要actionbar-->
        <item name="windowActionBar">false</item>
    </style>

    <style name="dialog_theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="function_icon_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:clickable">true</item>
    </style>



    <style name="logineditstyle">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="regeisteditstyle" parent="logineditstyle">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="owneritemincludestyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:background">@drawable/owner_item_bg</item>
    </style>
</resources>
